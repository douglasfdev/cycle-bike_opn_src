{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "SocketIOAdapterOptions": {
    "ServerUrl": "http://localhost:5161",
    "Reconnection": false,
    "ReconnectionAttempts": 5,
